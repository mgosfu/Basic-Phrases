<?xml version="1.0" encoding="utf-8"?>
<GridLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_centerHorizontal="true"
    android:layout_weight="1"
    android:alignmentMode="alignBounds"
    android:columnCount="2"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:rowCount="5"
    tools:context="com.mgodevelopment.basicphrases.MainActivity">

    <Button
        android:id="@+id/btnPhrase1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_column="0"
        android:layout_columnWeight="1"
        android:layout_gravity="fill"
        android:layout_row="0"
        android:layout_rowWeight="1"
        android:onClick="readPhrase"
        android:tag="doyouspeakenglish"
        android:text="Do you speak&#10;English?"
        android:textAllCaps="false"/>

    <Button
        android:id="@+id/btnPhrase2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_column="1"
        android:layout_columnWeight="1"
        android:layout_gravity="fill"
        android:layout_row="0"
        android:layout_rowWeight="1"
        android:gravity="center"
        android:onClick="readPhrase"
        android:tag="goodevening"
        android:text="Good evening"
        android:textAllCaps="false"/>

    <Button
        android:id="@+id/btnPhrase3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_column="0"
        android:layout_columnWeight="1"
        android:layout_gravity="fill"
        android:layout_row="1"
        android:layout_rowWeight="1"
        android:onClick="readPhrase"
        android:tag="hello"
        android:text="Hello"
        android:textAllCaps="false"/>

    <Button
        android:id="@+id/btnPhrase4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_column="1"
        android:layout_columnWeight="1"
        android:layout_gravity="fill"
        android:layout_row="1"
        android:layout_rowWeight="1"
        android:onClick="readPhrase"
        android:tag="howareyou"
        android:text="How are you"
        android:textAllCaps="false"/>

    <Button
        android:id="@+id/btnPhrase5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_column="0"
        android:layout_columnWeight="1"
        android:layout_gravity="fill"
        android:layout_row="2"
        android:layout_rowWeight="1"
        android:onClick="readPhrase"
        android:tag="ilivein"
        android:text="I live in"
        android:textAllCaps="false"/>

    <Button
        android:id="@+id/btnPhrase6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_column="1"
        android:layout_columnWeight="1"
        android:layout_gravity="fill"
        android:layout_row="2"
        android:layout_rowWeight="1"
        android:onClick="readPhrase"
        android:tag="mynameis"
        android:text="My name is"
        android:textAllCaps="false"/>

    <Button
        android:id="@+id/btnPhrase7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_column="0"
        android:layout_columnWeight="1"
        android:layout_gravity="fill"
        android:layout_row="3"
        android:layout_rowWeight="1"
        android:onClick="readPhrase"
        android:tag="please"
        android:text="Please"
        android:textAllCaps="false"/>

    <Button
        android:id="@+id/btnPhrase8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_column="1"
        android:layout_columnWeight="1"
        android:layout_gravity="fill"
        android:layout_row="3"
        android:layout_rowWeight="1"
        android:onClick="readPhrase"
        android:tag="welcome"
        android:text="Welcome"
        android:textAllCaps="false"/>

    <SeekBar
        android:id="@+id/sbVolume"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_column="0"
        android:layout_columnSpan="2"
        android:layout_row="4"/>

</GridLayout>